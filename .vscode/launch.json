    "version": "0.2.0",
    "configurations": [
        {
            "name": "Deno RUN <file>",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}\\cxctrl",
            "runtimeExecutable": "deno",
            "runtimeArgs": ["run", "--inspect-brk" ,  "-A", "--unstable", "--config", "${workspaceFolder}\\tsconfig.json", "${file}"],
            "port": 9229,
            "outputCapture": "std",

        },
        {
            "name": "Deno TEST <file>",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "deno",
            "runtimeArgs": ["test", "--inspect",  "-A", "--unstable", "--config", "${workspaceFolder}\\tsconfig.json", "${file}"],
            "port": 9229,
            "outputCapture": "std"
          },
    ]
}